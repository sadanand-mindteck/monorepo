{
  "name": "@jims/server",
  "version": "1.0.0",
  "description": "JIMS Backend API with Fastify, Drizzle ORM, and PostgreSQL",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "tsc",
    "copy-env": "cp .env dist/.env",
    "dev": "tsc-watch --onSuccess \"node dist/server.js\" ",
    "drizzle:generate": "npx drizzle-kit generate",
    "drizzle:migrate": "npx drizzle-kit migrate",
    "drizzle:push": "npx drizzle-kit push",
    "drizzle:pull": "npx drizzle-kit pull",
    "drizzle:check": "npx drizzle-kit check",
    "drizzle:up": "npx drizzle-kit up",
    "drizzle:studio": "npx drizzle-kit studio",
    "db:seed": "node src/db/seed.js"
  },
  "dependencies": {
    "@jims/shared": "workspace:^1.0.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.2.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "fastify": "^5.4.0",
    "fastify-type-provider-zod": "^5.0.2",
    "mime-types": "^3.0.1",
    "postgres": "^3.4.7",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.3",
    "speakeasy": "^2.0.0",
    "twilio": "^5.8.0",
    "uuid": "^11.1.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cli-color": "^2.0.6",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.1.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^10.0.0",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.31.4",
    "nodemailer": "^7.0.5",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsc-watch": "^7.1.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
